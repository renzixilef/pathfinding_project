{
  "name": "Pathfinding",
  "dockerFile": "Dockerfile",

  "runArgs": [
    "--network=host",
    "--mount=type=bind,source=/mnt/wslg,target=/mnt/wslg",
    "--mount=type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix"
  ],

  "containerEnv": {
    "DISPLAY": ":0",
    "WAYLAND_DISPLAY": "wayland-0",
    "XDG_RUNTIME_DIR": "/mnt/wslg/runtime-dir"
  }
}